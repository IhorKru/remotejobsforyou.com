{% extends "base.html.twig" %}

{% block body %}
    <div class="main-nav">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="index.html">
                    <h1><img class="img-responsive" src="../images/logo.png" alt="logo"></h1>
                </a>                    
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">                 
                    <li class="scroll"><a href="{{ path('index') }}" onclick = $("#menu-close").click(); >Home</a></li>
                    <li class="scroll"><a href="{{ path('index') }}#about-us" onclick = $("#menu-close").click(); >About Us</a></li>                   
                    <li class="scroll"><a href="{{ path('index') }}#services" onclick = $("#menu-close").click(); >Service</a></li> 
                    <li class="scroll"><a href="{{ path('index') }}#portfolio" onclick = $("#menu-close").click(); >Why Us</a></li>
                    <li class="scroll"><a href="{{ path('index') }}#blog" onclick = $("#menu-close").click(); >Blog</a></li>
                    <li class="scroll"><a href="{{ path('terms') }}" onclick = $("#menu-close").click(); >Terms</a></li>
                    <li class="scroll"><a href="{{ path('privacy') }}" onclick = $("#menu-close").click(); >Privacy Policy</a></li>
                    <li class="scroll active"><a href="{{ path('unsubscribe') }}" onclick = $("#menu-close").click(); >Unsubscribe</a></li>
                    <li class="scroll"><a href="#contact-terms" onclick = $("#menu-close").click(); >Contact</a></li>        
                </ul>
            </div>
        </div>	  
    </div><!--/#main-nav-->
        <div id="home-slider" class="carousel slide carousel-fade" data-ride="carousel">
            <div class="carousel-inner">
                <div class="item active" style="background-image: url(../images/slider/1.jpg)"></div>
                <div class="item" style="background-image: url(../images/slider/2.jpg)"></div>			
                <div class="item" style="background-image: url(../images/slider/3.jpg)"></div>
            </div>
            <div class="caption">
                <h3 class="animated fadeInLeftBig" style="color:white">We are trully sorry you are leaving us and hope you'll be back soon</h3>
                <p class="animated fadeInRightBig">Please complete your email and click "Unsubscribe" button below to initiate unsubscription process</p>
                </div>
                <!-- subscription form -->
                <div class="subscribe-form" style="text-align:center; position:absolute;top:35%;">
                    <div class= "row">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        <div class="input-group margin-bottom-sm col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3 col-sm-8 col-sm-offset-2 col-xs-12 text-center margin-f">
                            <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
                            {{ form_label(form.emailaddress) }}
                            {{ form_widget(form.emailaddress) }}
                        </div>
                        <div style="padding-top:5%; padding-bottom:8%;">
                            {{ form_row(form.submit, { 'label': 'Unsubscribe' }) }}
                        </div>
                        
                        {{ form_end(form) }}

                    </div>
                </div>
        </div>        
{% endblock %}
